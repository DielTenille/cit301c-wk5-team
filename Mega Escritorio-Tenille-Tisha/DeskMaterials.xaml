<Page x:Class="Mega_Escritorio_Tenille_Tisha.DeskMaterials"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mega_Escritorio_Tenille_Tisha"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="700"
      Title="Desk Materials">

    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="290" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <RadioButton x:Name="radioButton" Content="Oak" HorizontalAlignment="Left" Margin="89,92,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButton1" Content="Laminate" HorizontalAlignment="Left" Margin="89,112,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButton2" Content="Pine" HorizontalAlignment="Left" Margin="89,132,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Please Choose a Desk Material:" HorizontalAlignment="Left" Margin="35,28,0,0" VerticalAlignment="Top" Height="34" Width="182"/>
        <Button x:Name="button" Content="Continue" HorizontalAlignment="Left" Margin="81,203,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
    </Grid>
</Page>
